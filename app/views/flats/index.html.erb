
<h1>All Available Flats</h1>

<%= link_to "Add Flat", new_flat_path, class: "btn btn-primary" %>

<% @flats.each do |flat| %>
  <div>
    <h3><%= flat.name %></h3>
    <p><%= flat.address %></p>
    <p><%= flat.description %></p>
    <p>Price per night: <%= flat.price_per_night %></p>
    <p>Number of guests: <%= flat.number_of_guests %></p>
    <%= link_to "More info", flat_path(flat) %>
    <%= link_to "Edit Details", edit_flat_path(flat) %>
    <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure you want to delete this flat?" } %>
  </div>
<% end %>
